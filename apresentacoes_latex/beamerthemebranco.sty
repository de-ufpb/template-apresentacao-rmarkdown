% Footline
\setbeamerfont{footline}{size=\large}
\setbeamertemplate{footline}{
    \begin{beamercolorbox}[ht=20px, center]{inverted normal text}
        \begin{columns}
            \column{.8\textwidth}
                \insertshorttitle
            \column{.02\textwidth}
                \insertpagenumber
        \end{columns}
        \vspace{6px}
    \end{beamercolorbox}
}

